{
   "presets": [
      ["@babel/preset-react"],
      [
         "@babel/preset-typescript",
         {
            "isTSX": true,
            "allExtensions": true,
            "onlyRemoveTypeImports": true 
         }
      ],
      [
         "@babel/preset-env",
         {
            "targets": {
               "ie": "11"
            },
            "modules": "commonjs",
            "debug": false
         }
      ]
   ],
   "plugins": [
      "@babel/plugin-proposal-class-properties", 
      "@babel/transform-runtime", 
      "babel-plugin-styled-components"
   ]
}
